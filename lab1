.data
str1:   .asciiz "Enter an integer value: "
str2:   .asciiz "Double of the number is: "

.text
.globl main
main:
    li $v0, 4
    la $a0, str1
    syscall

    li $v0, 5
    syscall
    move $t0, $v0      # store input

    add $t1, $t0, $t0   # double it

    li $v0, 4
    la $a0, str2
    syscall

    li $v0, 1
    move $a0, $t1
    syscall

    li $v0, 10
    syscall
